<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">#FFEB3B</item>
        <item name="colorPrimaryDark">#F44336</item>
        <item name="colorAccent">#F44336</item>
    </style>
    <style name="Heading">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:layout_marginBottom">8dp</item>
        <item name="android:textSize">34sp</item>
    </style>
    <style name="Tagline" parent="Heading">
        <item name="android:layout_marginBottom">24dp</item>
        <item name="android:textSize">16sp</item>
    </style>
    <style name="WideScreen">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginBottom">8dp</item>
        <item name="android:paddingLeft">8dp</item>
    </style>
    <style name="UserName" parent="WideScreen">
        <item name="android:layout_marginBottom">24dp</item>
        <item name="android:inputType">textCapWords</item>
    </style>

    <style name="TextBox" parent="WideScreen">
        <item name="android:inputType">textCapWords</item>
    </style>

    <style name="Instructions" parent="WideScreen">
        <item name="android:layout_marginBottom">8dp</item>
    </style>

    <style name="results" parent="WideScreen">
        <item name="android:layout_marginTop">16dp</item>
        <item name="android:layout_marginBottom">16dp</item>
        <item name="android:textSize">24sp</item>
        <item name="android:textStyle">bold</item>
    </style>


    <style name="Answers" parent="WideScreen">
        <item name="android:layout_marginBottom">16dp</item>
    </style>

    <style name="ButtonBox">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginRight">8dp</item>
    </style>

    <style name="Picture">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:scaleType">center</item>
        <item name="android:layout_marginBottom">8dp</item>
    </style>

    <style name="SubmitButton">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:layout_marginTop">16dp</item>
        <item name="android:layout_marginBottom">32dp</item>
        <item name="android:textSize">18sp</item>
    </style>


</resources>
