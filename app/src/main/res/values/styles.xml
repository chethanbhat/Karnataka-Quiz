<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>
    <style name="Heading">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:layout_marginBottom">8dp</item>
        <item name="android:textSize">34sp</item>
    </style>
    <style name="Tagline" parent="Heading">
        <item name="android:layout_marginBottom">24dp</item>
        <item name="android:textSize">16sp</item>
    </style>
    <style name="WideScreen">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginBottom">8dp</item>
        <item name="android:paddingLeft">8dp</item>
    </style>
    <style name="UserName" parent="WideScreen">
        <item name="android:layout_marginBottom">24dp</item>
        <item name="android:inputType">textCapWords</item>
    </style>

    <style name="TextBox" parent="WideScreen">
        <item name="android:inputType">textCapWords</item>
    </style>

    <style name="Instructions" parent="WideScreen">
        <item name="android:layout_marginBottom">8dp</item>
    </style>

    <style name="Answers" parent="WideScreen">
        <item name="android:layout_marginBottom">16dp</item>
    </style>

    <style name="ButtonBox">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginRight">8dp</item>
    </style>

    <style name="Picture">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:scaleType">center</item>
        <item name="android:layout_marginBottom">8dp</item>
    </style>

    <style name="SubmitButton">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
    </style>


</resources>
